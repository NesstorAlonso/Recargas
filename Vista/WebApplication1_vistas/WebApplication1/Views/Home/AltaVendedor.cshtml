
@{
    ViewData["Title"] = "Cuenta";
}
    <div class="container">

        <div class="block-header">
            <h2><strong>Registro</strong> de vendedor</h2>
        </div>
        <div class="card">
            <div class="body">

                <div class="row clearfix">
                    <div class="col-lg-12 col-md-12">
                        <p class="my-2">Horario de servicio *:</p>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group form-float">
                            <p class="my-2">Nombre: *</p>
                            <input type="text" id="txtNombreVen" class="form-control" placeholder="Nombre" required name="nombre" minlength="3">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group form-float">
                            <p class="my-2">Apellido paterno: *</p>
                            <input type="text" class="form-control" required placeholder="Apellido paterno" id="txtApellidopVen" minlength="3">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="form-group form-float">
                            <p class="my-2">Apellido materno: *</p>
                            <input type="text" class="form-control" required placeholder="Apellido materno" id="txtApellidomVen" minlength="3">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <b>Hora inicio:</b>
                        <div class="input-group">
                            <span class="input-group-addon"> <i class="zmdi zmdi-time"></i></span>
                            <input type="text" id="txtHoraIni" class="form-control time" required>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12">
                        <b>Hora fin:</b>
                        <div class="input-group">
                            <span class="input-group-addon"> <i class="zmdi zmdi-time"></i></span>
                            <input type="text" id="txtHoraFin" class="form-control time" required>
                        </div>
                    </div>
                </div>
            </div>
            <div id="TituloComp" class="block-header">
                <h2><strong>Dias de servicio</strong></h2>
            </div>
            <div class="card">
                <div class="body">
                    <div id="DiasServicio" class="row clearfix">
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_L" type="checkbox" class="form-control" name="Dias[]" value="Lunes">
                                    <label for="checkbox_L">Lunes</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_M" type="checkbox" class="form-control" name="Dias[]" value="Martes">
                                    <label for="checkbox_M">Martes</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_Mi" type="checkbox" class="form-control" name="Dias[]" value="Miercoles">
                                    <label for="checkbox_Mi">Miercoles</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_J" type="checkbox" class="form-control" name="Dias[]" value="Jueves">
                                    <label for="checkbox_J">Jueves</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_V" type="checkbox" class="form-control" name="Dias[]" value="Viernes">
                                    <label for="checkbox_V">Viernes</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_S" type="checkbox" class="form-control" name="Dias[]" value="Sabado">
                                    <label for="checkbox_S">Sabado</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12">
                            <div class="form-group">
                                <div class="checkbox">
                                    <input id="checkbox_D" type="checkbox" class="form-control" name="Dias[]" value="Domingo">
                                    <label for="checkbox_D">Domingo</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="help-info">* Datos obligatorios</div>
        </div>
        <div class="body">
            <div class="row clearfix">
                <div class="col-lg-6 col-md-6">
                    <button class="btn btn-success btn-round" id="btnModificarVendedor">Guardar vendedor <i class="zmdi zmdi-floppy"></i> </button>
                </div>
                <div class="col-lg-6 col-md-6">
                    <a asp-area="" asp-controller="Home" asp-action="Vendedores">
                        <button class="btn btn-danger btn-round" id="btnCancelar">Cancelar</button>
                        </a>
                </div>
            </div>
        </div>
    </div>