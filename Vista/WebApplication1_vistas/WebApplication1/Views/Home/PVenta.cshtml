
@{
    ViewData["Title"] = "Usuarios";
}


<div class="container">
    <div class="block-header">
        <h2><strong>Puntos de venta</strong></h2>
    </div>
    <div class="card">
        <div class="body">
            <div class="row clearfix">
                <div class="table-responsive col-lg-12">

                    <div class="row">
                        <div class="col-lg-12">
                            <a asp-area="" asp-controller="Home" asp-action="regPuntoVenta" title="Cuenta">
                                <button class="btn btn-default pull-right add-row"><i class="fa fa-plus"></i>&nbsp;&nbsp; Agregar punto de venta <i class="zmdi zmdi-plus-circle-o"></i></button>
                            </a>
                        </div>
                    </div>

                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable align-center" id="tbPventa">
                        <thead class="thead-dark" align="center">
                            <tr>
                                <th>Editar</th>
                                <th>ID</th>
                                <th>Punto de venta</th>
                                <th>Calle</th>
                                <th>Numero exterior</th>
                                <th>Numero interior</th>
                                <th>Municipio</th>
                                <th>Colonia</th>
                                <th>Estado</th>
                                <th>Nombre responsable</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

