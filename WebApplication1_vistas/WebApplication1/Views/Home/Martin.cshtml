
@{
    ViewData["Title"] = "Martin";
}

<!-- Empieza el carrousel-->

<div id="carrousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carrousel" data-slide-to="0" class="active"></li>
        <li data-target="#carrousel" data-slide-to="1"></li>
        <li data-target="#carrousel" data-slide-to="2"></li>
    </ol>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/assets/images/slides/image-1.jpg" alt="First Slide">
            <div class="carousel-caption">
                <h3 class="animated infinite bounce delay-2s">hola</h3>
                <p>primera foto</p>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="~/assets/images/slides/image-2.jpg" alt="Second Slide">
            <div class="carousel-caption">
                <h3>hola</h3>
                <p>segunda foto</p>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="~/assets/images/slides/image-3.jpg" alt="Third Slide">
            <div class="carousel-caption">
                <h3>hola</h3>
                <p>tercera foto</p>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carrousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="sr-only">Previus</span>
        </a>
        <a class="carousel-control-next" href="#carrousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- Termina el carrousel-->
